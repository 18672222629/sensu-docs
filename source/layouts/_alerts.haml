- if current_resource.data.danger
  - if current_resource.data.danger.kind_of?(Array)
    - current_resource.data.danger.each do |danger|
      %div.alert.alert-danger{ role: "alert" }= danger
  - else
    %div.alert.alert-danger{ role: "alert" }= current_resource.data.danger

